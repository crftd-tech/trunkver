{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "automerge": true,
  "automergeType": "branch",
  "packageRules": [
    {
      "matchPackageNames": [
        "mcr.microsoft.com/devcontainers/go",
        "golang",
        "go"
      ],
      "overrideDatasource": "golang-version",
      "overridePackageName": "golang",
      "groupName": "go",
      "rangeStrategy": "bump"
    }
  ]
}
